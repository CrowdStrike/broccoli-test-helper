{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "sourceMap": true,
    "lib": ["es5", "es2015.core", "es2015.promise"],
    "baseUrl": "src",
    "paths": {
      "*": ["*.d.ts"]
    },
    "types": ["node", "tmp"]
  },
  "files": ["src/index.ts"]
}
